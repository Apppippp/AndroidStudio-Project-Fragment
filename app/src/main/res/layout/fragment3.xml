<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.fragmentmodul41412210055.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="170dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pippppp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muhammad Afif Syaifuddin"
            android:textColor="@color/purple_200"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dalam sunyi malam, kegelisahan memenuhi benakku. Sebagai anak tunggal, beban harapan orang tua terasa begitu berat, bagai gunung yang harus kutaklukkan sendirian. Namun, di dalam kedalaman malam, aku merenung, setiap rintangan adalah peluang untuk tumbuh dan berkembang. Orang tua telah menanamkan impian di dasar hatiku, dan tekadku bulat untuk menjadikannya kenyataan. Meski badai menghadang, aku tidak sendirian. Cahaya kasih sayang mereka menerangi jalanku, memberiku kekuatan untuk terus maju."
            android:textSize="11dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="start"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~ Bunga tanpa akar ~ By Pipp"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:padding="10dp"
            />


    </LinearLayout>


</LinearLayout>